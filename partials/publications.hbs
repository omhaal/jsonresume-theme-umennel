{{#if resume.publications.length}}
<div id="publications" class="box">
    <h2><i class="fa fa-book ico"></i> Publications</h2>
    {{#each resume.publications}}
    <div class="publication panel panel-default">
		<div class="panel-heading">
		<div class="name panel-title">{{name}}</div>
		{{#if url}}
		<div class="address">
			<a href="{{url}}" target= "_blank"><i class="fa fa-globe ico"></i> {{url}}</a>
		</div>
		{{/if}}
		<div class="year">{{getMonth releaseDate}} {{getYear releaseDate}}</div>
		</div>
		<div class="panel-body">
			{{#if publisher}}
			<div><i class="fa fa-bookmark ico"></i> {{publisher}}</div>
			{{/if}}
			{{#if summary}}
			<p>{{summary}}</p>
			{{/if}}
		</div>
    </div>
    {{/each}}
</div>
{{/if}}