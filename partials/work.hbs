{{#if resume.work.length}}
<div id="work" class="box achievement">
	<h2><i class= "fa fa-toolbox ico"></i> Work Experience</h2>
	{{#each resume.work}}
	<div class="achievement">
		<div class="header">
			{{#if name}}
			<h3>{{name}}</h3>
			{{/if}}
			{{#if url}}
			<p class="address">
				<a href="{{url}}" target= "_blank"><i class="fa fa-globe ico"></i> {{url}}</a>
			</p>
			{{/if}}
			<p class="date">{{getMonth startDate}} {{getYear startDate}} â€“ {{#if endDate}}{{getMonth endDate}} {{getYear endDate}}{{else}}present{{/if}}</p>
		</div>
		<div class="details">
			<h3>{{position}}</h3>
			{{#if summary}}
			{{summary}}
			{{/if}}
			{{#if highlights.length}}
			<ul class="list-group">
			{{#each highlights}}
				<li class="list-group-item">{{this}}</li>
			{{/each}}
			</ul>
			{{/if}}
			{{#if keywords.length}}
			<div>
				{{#each keywords}}
				<span class= "skill badge">{{this}}</span>
				{{/each}}
			</div>
			{{/if}}
		</div>
	</div>
	{{/each}}
</div>
{{/if}}